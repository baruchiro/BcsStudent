generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  User
  Organization
  Bot
}

enum PullRequestState {
  open
  closed
}

model GithubUser {
  id           String        @id
  username     String        @unique
  avatarUrl    String?
  type         UserType
  createdPRs   PullRequest[] @relation("Author")
  repositories Repository[]  @relation("Owner")
}

model Repository {
  id            String        @id
  fullName      String        @unique
  description   String?
  isPrivate     Boolean
  defaultBranch String
  owner         GithubUser    @relation("Owner", fields: [ownerId], references: [id])
  ownerId       String
  pullRequests  PullRequest[]
}

model PullRequest {
  id         String           @id
  number     Int
  title      String
  state      PullRequestState
  isDraft    Boolean
  createdAt  DateTime
  updatedAt  DateTime
  closedAt   DateTime?
  mergedAt   DateTime?
  baseRef    String
  headRef    String
  author     GithubUser       @relation("Author", fields: [authorId], references: [id])
  authorId   String
  repository Repository       @relation(fields: [repoId], references: [id])
  repoId     String

  @@unique([repoId, number])
}
